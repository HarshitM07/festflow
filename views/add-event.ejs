<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Event - FestFlow</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen font-sans">

  <div class="max-w-xl mx-auto px-4 py-8">

    <h1 class="text-3xl font-bold mb-6 text-center">âž• Add New Event</h1>

    <form action="/admin/add-event" method="POST" class="space-y-4">

      <div>
        <label class="block mb-1">Title</label>
        <input name="title" required class="w-full px-3 py-2 rounded bg-gray-800 border border-gray-600">
      </div>

      <div>
        <label class="block mb-1">Description</label>
        <textarea name="description" rows="3" class="w-full px-3 py-2 rounded bg-gray-800 border border-gray-600"></textarea>
      </div>

      <div>
        <label class="block mb-1">Date</label>
        <input type="datetime-local" name="date" required class="w-full px-3 py-2 rounded bg-gray-800 border border-gray-600">
      </div>

      <div>
        <label class="block mb-1">Registration Deadline</label>
        <input type="datetime-local" name="registrationDeadline" required class="w-full px-3 py-2 rounded bg-gray-800 border border-gray-600">
      </div>

      <div>
        <label class="block mb-1">Fest Type</label>
        <select name="festType" required class="w-full px-3 py-2 rounded bg-gray-800 border border-gray-600">
          <option value="Nimbus">Nimbus</option>
          <option value="Hill'ffair">Hill'ffair</option>
        </select>
      </div>

      <% if (currentUser && currentUser.role === "SUPER_ADMIN") { %>
      <div>
        <label class="block mb-1">Select Club</label>
        <select name="clubId" class="w-full px-3 py-2 rounded bg-gray-800 border border-gray-600" required>
          <option value="">Select Club</option>
          <% clubs.forEach(club => { %>
             <option value="<%= club._id %>"><%= club.name %></option>
          <% }) %>
        </select>
      </div>
      <% } else { %>
        <!-- Coordinator users do not need to pick a club -->
      <% } %>

      <button type="submit" class="bg-green-600 hover:bg-green-700 w-full py-2 rounded text-white font-semibold">
        Create Event
      </button>

    </form>

  </div>
</body>
</html>
