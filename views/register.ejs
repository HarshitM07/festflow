<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Register - FestFlow</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    function toggleClubField() {
      const role = document.getElementById("role").value;
      const clubField = document.getElementById("clubNameField");
      if (role === "admin") {
        clubField.classList.remove("hidden");
      } else {
        clubField.classList.add("hidden");
      }
    }
  </script>
</head>
<body class="bg-gray-900 text-white flex items-center justify-center min-h-screen px-4">
  <form action="/api/auth/register" method="POST" class="bg-gray-800 p-8 rounded-lg shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center">Register on FestFlow</h2>

    <!-- âœ… Flash Messages -->
    <% if (Array.isArray(error) && error.length > 0) { %>
      <div class="bg-red-500 text-white p-3 rounded mb-4 text-center font-medium shadow">
        <%= error[0] %>
      </div>
    <% } %>
    <% if (Array.isArray(success) && success.length > 0) { %>
      <div class="bg-green-500 text-white p-3 rounded mb-4 text-center font-medium shadow">
        <%= success[0] %>
      </div>
    <% } %>

    <label class="block mb-4">
      <span class="block text-sm text-gray-300 mb-1">Name</span>
      <input type="text" name="name" required class="w-full p-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
    </label>

    <label class="block mb-4">
      <span class="block text-sm text-gray-300 mb-1">Email</span>
      <input type="email" name="email" required class="w-full p-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
    </label>

    <label class="block mb-4">
      <span class="block text-sm text-gray-300 mb-1">Password</span>
      <input type="password" name="password" required class="w-full p-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
    </label>

    <label class="block mb-4">
      <span class="block text-sm text-gray-300 mb-1">Role</span>
      <select name="role" id="role" onchange="toggleClubField()" required class="w-full p-2 rounded bg-gray-700 text-white">
        <option value="">-- Select Role --</option>
        <option value="user">User</option>
        <option value="admin">Admin</option>
      </select>
    </label>

    <div id="clubNameField" class="hidden">
      <label class="block mb-4">
        <span class="block text-sm text-gray-300 mb-1">Club Name</span>
        <input type="text" name="clubName" class="w-full p-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </label>
    </div>

    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 p-2 rounded text-white font-semibold">
      Register
    </button>

    <p class="text-sm mt-4 text-center text-gray-400">
      Already have an account? <a href="/login" class="text-blue-400 hover:underline">Login</a>
    </p>
  </form>
</body>
</html>
